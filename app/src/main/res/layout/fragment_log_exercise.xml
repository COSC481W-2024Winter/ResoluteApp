<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LogExerciseFragment" >

    <TextView
        android:id="@+id/log_exercise_identifier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log Exercise Screen"
        app:layout_constraintBottom_toTopOf="@+id/log_exercise_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/log_exercise_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log Exercise"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/to_home_from_log_exercise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Discard (Back to Home)"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/log_exercise_button" />
</androidx.constraintlayout.widget.ConstraintLayout>